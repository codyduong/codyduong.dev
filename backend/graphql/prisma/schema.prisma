generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    Int      @unique
  content   String
  createdAt DateTime @db.Date @default(now())
  title     String   @unique
  updatedAt DateTime @db.Date @updatedAt
}

model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  role      String?
}
