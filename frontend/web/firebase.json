{
  "hosting": {
    "public": "build/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "run": {
          "serviceId": "web",
          "region": "us-central1"
        }
      }
    ]
  },
  "functions": [
    {
      "function": "api",
      "source": "../../backend/graphql/",
      "codebase": "graphql",
      "runtime": "nodejs16"
    },
    {
      "function": "email-api",
      "source": "../../backend/email-api/",
      "codebase": "email-api",
      "runtime": "nodejs16"
    }
  ]
}
