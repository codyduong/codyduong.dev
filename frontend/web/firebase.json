{
  "hosting": {
    "public": "build/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  "functions": [
    {
      "function": "api",
      "source": "../../backend/graphql/",
      "codebase": "backend",
      "runtime": "nodejs16"
    },
    {
      "function": "app",
      "source": ".",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "runtime": "nodejs16"
    }
  ]
}
