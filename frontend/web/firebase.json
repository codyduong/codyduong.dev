{
  "hosting": {
    "public": "./dist/client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/index.html"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|gif|webp|svg|woff|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=604800, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "glob": "**",
        "run": {
          "serviceId": "web",
          "region": "us-central1"
        }
      }
    ]
  }
}